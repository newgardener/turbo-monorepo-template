{
  "name": "turbo-monorepo-template",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "csr": "pnpm --filter csr",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,css,scss,html}\"",
    "lint": "turbo lint",
    "ssr": "pnpm --filter ssr"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.2.0",
    "typescript": "^5.5.3"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
